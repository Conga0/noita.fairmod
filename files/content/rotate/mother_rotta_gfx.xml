<Sprite
    filename="mods/noita.fairmod/files/content/rotate/mother_rotta.png"
    offset_x="24"
    offset_y="24"
    default_animation="stand">

    <!-- animation -->
    <RectAnimation
        name="stand"
        pos_x="0"
        pos_y="0"
        frame_count="8"
        frame_width="50"
        frame_height="50"
        frame_wait="0.1"
        frames_per_row="8">
    </RectAnimation>

    <RectAnimation
        frame_count="8"
        frame_height="50"
        frame_wait="0.1"
        frame_width="50"
        frames_per_row="8"
        name="walk"
        pos_x="0"
        pos_y="50">
    </RectAnimation>

    <RectAnimation
        frame_count="8"
        frame_height="50"
        frame_wait="0.07"
        frame_width="50"
        frames_per_row="8"
        name="run"
        pos_x="0"
        pos_y="100">
    </RectAnimation>
</Sprite>